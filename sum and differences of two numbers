#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
	int a,b;
    float c,d;
    scanf("%d %d",&a,&b);
    scanf("%f %f",&c,&d);
    int x=a+b;
    int y=a-b;
    float t=c+d;
    float v=c-d;
    printf("%d %d\n",x,y);
    printf("%.1f %.1f",t,v);
    return 0;
}
